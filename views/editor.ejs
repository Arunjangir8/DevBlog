<%- include("partials/head.ejs") %>
<div style="display: flex; justify-content: center; align-items: center; height: 80vh;">
    <form action="/makeChanges" method="post" id="postEditor" class="thought-container">
        
            <h1>mistakes happen!</h1>
        
            <input type="text" name="heading" id="heading" value="<%= heading %>">
    
            <textarea name="body" id="body" required><%= body %></textarea>
        
            <h2>password:</h2>
            <input type="text" name="password" id="password" required placeholder="<%= password %>">
        
            <button type="submit" id="changPostButton">Change!</button>
        <input type="text" hidden name="index" value=<%= index %>>
    </form>
</div>
